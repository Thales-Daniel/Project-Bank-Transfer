generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String  @id @default(uuid())
  username   String  @unique
  password   Decimal
  account_id Decimal
}

model Accounts {
  id      String  @id @default(uuid())
  balance Decimal
}

model Transactions {
  id         String   @id @default(uuid())
  value      Decimal
  created_at DateTime @default(now())
}
